<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome to Sugarworld</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div id="heading">
      <h2>Choose</h2>
      <p>a</p>
      <h1>Farm</h1>
    </div>
    <div id="levelContainer">
      <% for(let level of levels){%>
      <div
        class="level <%= level.locked ? "disabled" : "" %>"
      >
        <a href="/levels/<%= level._id %> "
          ><%= level.locked?"?":level.number %>
        </a>
      </div>
      <% } %>
    </div>
    <div class="loader">
      <div class="loader-content">
      <div class="loader-chili">
        <img src="/imgs/chili.png" alt="">
      </div>
      <p class="loader-text">Hold your chillies!<br/> Hot page coming through!</p>
    </div>
    </div>
    <script>
      document.querySelectorAll(".level").forEach((c) =>
        setInterval(() => {
          c.style.borderRadius = `${Math.floor(Math.random() * 50) + 50}% ${
            Math.floor(Math.random() * 50) + 50
          }% ${Math.floor(Math.random() * 50) + 50}% ${
            Math.floor(Math.random() * 50) + 50
          }% / ${Math.floor(Math.random() * 50) + 50}% ${
            Math.floor(Math.random() * 50) + 50
          }% ${Math.floor(Math.random() * 50) + 50}% ${
            Math.floor(Math.random() * 50) + 50
          }%`;
        }, 500)
      );
    </script>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
